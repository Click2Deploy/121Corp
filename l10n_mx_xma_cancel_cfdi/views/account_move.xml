<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="account_move_form_inherits_view">
        <field name="name">account.move.form.inherits</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="button_l10n_mx_xma_cfdi_is_to_cance" string="Documento a cancelar" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible' : ['|',('l10n_mx_xma_cfdi_cancel_to_cancel', '=', True),('state', '=', 'draft')]}"/>
                <button name="button_l10n_mx_xma_cfdi_cancel_request_cancel" string="Solicitar cancelaciÃ³n del CFDI" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible' : ['|',('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False),('state', 'not in', ('posted'))]}" />
            </xpath>

            <!-- attrs="{'invisible' : ['|',('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False),('state', 'not in', ('posted'))]}" -->
            
            <xpath expr="//group/group[1]" position="inside">
                <field name="l10n_mx_xma_cfdi_cancel_to_cancel" invisible="1"/>
                <field name="l10n_mx_xma_cfdi_cancel_cancel_type_id" attrs="{'invisible' : [('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False)],'readonly':[('state','=','cancel')]}"/>
                <field name="code_motive" invisible="1"/>
                <field name="global_invoice" attrs="{'invisible' : [('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False)],'readonly':[('state','=','cancel')]}"/>
                <field name="replace_uuid"  attrs="{'required' : [('code_motive', '=', '01')],'invisible' : [('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False)],'readonly':[('state','=','cancel')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
