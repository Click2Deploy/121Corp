<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="account_payment_iherits_form_view">
        <field name="name">account.payment.form.inherits</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_draft']" position="after">
                <button name="button_l10n_mx_xma_cfdi_is_to_cance" string="Documento a cancelar" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible' : ['|',('l10n_mx_xma_cfdi_cancel_to_cancel', '=', True),('state', 'not in', ('posted', 'cancelled'))]}"/>
                <button name="button_l10n_mx_xma_cfdi_cancel_request_cancel" string="Solicitar cancelaciÃ³n del CFDI" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible' : ['|',('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False),('state', 'not in', ('posted'))]}"/>
            </xpath>
            <xpath expr="//field[@name='communication']" position="after">
                <field name="l10n_mx_xma_cfdi_cancel_to_cancel" invisible="1"/>               
                <field name="code_motive" invisible="1"/>
                
                <label for="l10n_mx_xma_cfdi_cancel_cancel_type_id"/>
                <div class="o_row">
                     <field name="l10n_mx_xma_cfdi_cancel_cancel_type_id" attrs="{'invisible' : [('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False)],'readonly':[('state','=','cancelled')]}"/>
                </div>
                 <label for="replace_uuid"/>
                <div class="o_row">
                     <field name="replace_uuid"  attrs="{'required' : [('code_motive', '=', '01')],'invisible' : [('l10n_mx_xma_cfdi_cancel_to_cancel', '=', False)],'readonly':[('state','=','cancelled')]}"/>
                </div>
            </xpath>
        </field>
    </record>



</odoo>
